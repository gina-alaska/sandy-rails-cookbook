---
<%=@environment%>:
  adapter: <%= @database['adapter'] %>
  database: <%= @database['database'] %>
  username: <%= @database['username'] %>
  password: <%= @database['password'] %>
  schema_search_path: <%= @database['schema_search_path'] %>
  host: <%= @hostname %>
  client_encoding: <%= @database['client_encoding'] %>
  pool: 5