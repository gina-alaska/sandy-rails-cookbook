#!/bin/bash

cd <%= node['sandy']['home'] %>/embedded/service/sandy

for i in /etc/profile.d/*.sh ; do
    if [ -r "$i" ]; then
        if [ "${-#*i}" != "$-" ]; then
            . "$i"
        else
            . "$i" >/dev/null 2>&1
        fi
    fi
done

#Do this after profile.d;  Some processing scripts are naught and clobber $PATH
export PATH=$PATH:<%=node['sandy']['home']%>/embedded/bin:<%=node['sandy']['worker']['home']%>/current/bin

exec 2>&1
exec chpst -u processing -e /etc/sv/sidekiq/env \
  <%=node['sandy']['home']%>/embedded/bin/bundle exec sidekiq -t 30 -e production
